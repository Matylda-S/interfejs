<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Strona">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/button3"


        style="@style/Theme.Pizzeria"

        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/material_dynamic_neutral60"
        android:fontFamily="@font/quicksand"

        android:text="@string/raport_sprzedazy"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <Button
        android:id="@+id/button2"
        style="@style/Theme.Pizzeria"
        android:layout_width="300dp"

        android:layout_height="49dp"
        android:layout_marginTop="16dp"


        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/material_dynamic_neutral60"
        android:fontFamily="@font/quicksand"
        android:insetTop="4dp"


        android:text="@string/Rezerwacje"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/quicksand"
        android:text="@string/Strona_glowna"
        android:textAlignment="center"

        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/Base.Theme.Pizzeria"


        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="?android:attr/colorPressedHighlight"
        android:fontFamily="@font/quicksand"
        android:text="@string/Produkty"


        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/Opis_obrazka"


        android:src="@drawable/ic_lrezerw_foreground"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.363"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/ic_lrezerw_foreground" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"

        android:contentDescription="@string/Opis_obrazka"

        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.318"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/ic_koszyk_foreground" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_marginTop="208dp"


        android:contentDescription="@string/Opis_obrazka"

        app:layout_constraintEnd_toStartOf="@+id/button3"

        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView"
        app:srcCompat="@drawable/ic_wykres_foreground" />

    <Button
        android:id="@+id/button4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/white"
        android:text="@string/Ustawienia"
        android:textColor="@color/material_dynamic_neutral40"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="1"
        app:rippleColor="@color/white"
        app:strokeColor="@color/design_default_color_background" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:contentDescription="@string/Opis_obrazka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"

        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/ic_ustawienia_foreground" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="220dp"
        android:layout_height="192dp"
        android:src="@drawable/pizzad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView" />


</androidx.constraintlayout.widget.ConstraintLayout>